│   ├── mumbai_model.pkl
│   ├── delhi_model.pkl
│   └── global_model.pkl
│
├── clients/                        # 📂 FL clients (one per store)
│   ├── client_mumbai.py
│   ├── client_delhi.py
│   └── client_chennai.py
│
├── server/                         # 📂 FL aggregator (Flower server)
│   └── fl_server.py
│
├── dashboard/                      # 📂 Streamlit frontend UI
│   ├── app.py                      # Main UI
│   └── pages/                      # Optional: UI pages
│       ├── 1_🏠_Home.py
│       ├── 2_📈_Trend_Analysis.py
│       ├── 3_☁️_Weather_Tracker.py
│       ├── 4_🎉_Event_Calendar.py
│       ├── 5_📊_Forecast_Engine.py
│       ├── 6_🤖_FL_Panel.py
│       └── 7_📦_Inventory_Dashboard.py
│
├── utils/                          # 📂 Helper functions
│   ├── data_loader.py              # Loads data CSVs
│   ├── model_utils.py              # ML model training & evaluation
│   └── fl_utils.py                 # For federated logic
│
├── requirements.txt                # 🧪 Python dependencies
├── README.md                       # 📘 Project overview
└── .streamlit/                     # ⚙️ Streamlit config (optional)
    └── config.toml
